{
	"name": "derw-language-server",
	"description": "Language server for Derw",
	"author": "eeue56",
	"license": "BSD-3",
	"version": "0.0.5",
	"repository": {
		"type": "git",
		"url": "https://github.com/derw-lang/derw-language-server"
	},
	"publisher": "derw",
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		"derw",
		"language",
		"server"
	],
	"sponsor": {
		"url": "https://github.com/sponsors/eeue56"
	},
	"pricing": "Free",
	"icon": "derw_logo.png",
	"engines": {
		"vscode": "^1.63.0"
	},
	"activationEvents": [
		"onLanguage:derw"
	],
	"main": "./client/out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Derw configuration",
			"properties": {
				"derwLanguageServer.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"derwLanguageServer.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "verbose",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		},
		"taskDefinitions": [
			{
				"type": "derw",
				"required": [],
				"properties": {}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lcint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh",
		"format": "npx prettier --write ."
	},
	"devDependencies": {
		"@types/mocha": "^9.1.0",
		"@types/node": "^14.17.0",
		"@typescript-eslint/eslint-plugin": "^5.13.0",
		"@typescript-eslint/parser": "^5.13.0",
		"eslint": "^8.10.0",
		"mocha": "^9.2.1",
		"prettier": "github:eeue56/prettier#feat/spacing-around-square-brackets",
		"typescript": "^4.6.2"
	}
}
